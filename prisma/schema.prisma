generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id @default(uuid())

  userClerkId String   @unique
  email String @unique
  name String
  imageURL String @db.Text
  bio String @db.Text

  userSettings UserSettings?
  userProfileImage UserProfileImage?
  userLimit UserLimit?
  userSubscription UserSubscription?
  

  favorites Favorite[]
  conversations Conversation[]
  reviews Review[]
  changelogReactions ChangelogReaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProfileImage {
  id String @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)

  imageUrl String
  imageKey String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model UserSettings {
  id String @id @default(uuid())
  allowBooksVisibliity Boolean @default(false)

  userId String @unique
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum FavoriteBookStatus {
  WILL_READ
  READING
  FINISHED
}


model Favorite {
  id String @id @default(uuid())

  bookId String

  userId String
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)

  status FavoriteBookStatus @default(WILL_READ)
  

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId])

}

model Review {
  id String @id @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)

  bookId String

  rating Int
  review String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId])
}

 model Conversation {
  id String @id @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)
  bookId String

  deleted Boolean @default(false)

  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

    @@unique([userId, bookId])

 }

 model Message {
  id String @id @default(uuid())
  userQuestion String
  chatGPTResponse String

  conversationId String
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
 }

model UserLimit {
  id String @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)

  count Int @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum UserSubscriptionType {
  TEST
  PRODUCTION
}

model UserSubscription {
  id String @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)
  type UserSubscriptionType @default(TEST) 

  stripeCustomerId String? @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId String? @unique @map(name:"stripe_subscription_id")
  stripePriceId String? @unique @map(name:"stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end") 


}

enum ChangelogCategory {
  IMPROVEMENT
  BUG_FIX
  NEW_FEATURE
  USER_EXPERIENCE_ENHANCEMENT
  OTHER
}

model Changelog {
  id String @id @default(uuid())
  title String 
  description String
  categories ChangelogCategory[] 

  images ChangelogImages[]
  reactions ChangelogReaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChangelogImages {
  id String @id @default(uuid())
  changelogId String
  changelog Changelog @relation(fields: [changelogId], references: [id], onDelete: Cascade)

  imageUrl String
  imageKey String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model ChangelogReaction {
  id String @id @default(uuid())

  userId String 
  user User @relation(fields: [userId], references: [userClerkId], onDelete: Cascade)
  changelogId String
  changelog Changelog @relation(fields: [changelogId], references: [id], onDelete: Cascade)

  reaction Boolean
  feedback String? @db.Text 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, changelogId])

}